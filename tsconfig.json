{

  "compilerOptions": {

    "target": "esnext",

    "module": "esnext",

    "moduleResolution": "node",

    "strict": true,

    "jsx": "preserve",

    "sourceMap": true,

    "resolveJsonModule": true,

    "esModuleInterop": true,

    "baseUrl": ".",

    "paths": {

      "@/*": ["resources/js/*"]

    },

    "lib": ["esnext", "dom"],

    "types": ["vite/client", "@types/node"]

  },

  "include": [

    "resources/js/**/*.ts",

    "resources/js/**/*.d.ts",

    "resources/js/**/*.tsx",

    "resources/js/**/*.vue"

  ]

} 
